<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/zero"
    android:paddingRight="@dimen/zero"
    android:paddingTop="@dimen/zero"
    android:paddingBottom="@dimen/zero"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_receive"
    tools:context="com.imme.imme.ReceiveActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/receive"
        android:background="#0E99DA"
        android:layout_above="@+id/numPad">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Enter Amount:"
            android:id="@+id/receive_enter_amount"
            android:gravity="center"
            android:textColor="@color/textWhite"
            android:paddingTop="60dp"
            android:paddingBottom="5dp"
            android:textSize="25dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:text="Rp"
                android:id="@+id/receive_rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textWhite"
                android:textSize="25sp"
                android:paddingTop="@dimen/receive_rp_paddingTop"
                android:paddingRight="@dimen/receive_rp_paddingRight" />

            <TextView
                android:id="@+id/receive_balance_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textWhite"
                android:layout_gravity="center_horizontal"
                android:text="@string/default_receive_balance"
                android:textSize="55sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="#0E99DA"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/numPad">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="50dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Receive and verify your money securely"
                android:id="@+id/receiver_list_text"
                android:gravity="center"
                android:textSize="15dp"
                android:padding="10dp"
                android:textColor="@color/textWhite"
                android:background="#0e78a8"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Continue"
                android:id="@+id/receiver_continue"
                android:gravity="center"
                android:textSize="25dp"
                android:padding="10dp"
                android:textColor="@color/textWhite"
                android:background="#00aeff"
                android:clickable="true" />

        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:stretchColumns="1"
            android:padding="@dimen/zero">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_weight="1"
                android:layout_marginBottom="1dp">

                <Button
                    android:layout_height="fill_parent"
                    android:text="1"
                    android:id="@+id/button_1"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:background="@drawable/pin_button"
                    android:textColor="@drawable/btn_text_color"
                    android:textSize="30dp"/>

                <Button
                    android:layout_height="fill_parent"
                    android:text="2"
                    android:id="@+id/button_2"
                    android:layout_span="1"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:background="@drawable/pin_button"
                    android:textColor="@drawable/btn_text_color"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:textSize="30dp"/>

                <Button
                    android:layout_height="fill_parent"
                    android:text="3"
                    android:id="@+id/button_3"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:background="@drawable/pin_button"
                    android:textColor="@drawable/btn_text_color"
                    android:textSize="30dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="1dp">

                <Button
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="4"
                    android:id="@+id/button_4"
                    android:background="@drawable/pin_button"
                    android:textColor="@drawable/btn_text_color"
                    android:textSize="30dp"/>

                <Button
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="5"
                    android:id="@+id/button_5"
                    android:background="@drawable/pin_button"
                    android:textColor="@drawable/btn_text_color"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:textSize="30dp"/>

                <Button
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="6"
                    android:id="@+id/button_6"
                    android:background="@drawable/pin_button"
                    android:textColor="@drawable/btn_text_color"
                    android:textSize="30dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="1dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="7"
                    android:id="@+id/button_7"
                    android:background="@drawable/pin_button"
                    android:textColor="@drawable/btn_text_color"
                    android:textSize="30dp"/>

                <Button
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="8"
                    android:id="@+id/button_8"
                    android:background="@drawable/pin_button"
                    android:textColor="@drawable/btn_text_color"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:textSize="30dp"/>

                <Button
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="9"
                    android:id="@+id/button_9"
                    android:background="@drawable/pin_button"
                    android:textColor="@drawable/btn_text_color"
                    android:textSize="30dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text=" "
                    android:id="@+id/button_none"
                    android:background="#0f84b9"
                    android:textSize="30dp"/>

                <Button
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="0"
                    android:id="@+id/button_0"
                    android:background="@drawable/pin_button"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:textSize="30dp"
                    android:textColor="@drawable/btn_text_color" />

                <ImageButton
                    android:layout_height="fill_parent"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:id="@+id/button_backspace"
                    android:src="@drawable/button_receive_x"
                    android:background="#0E99DA"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>
</RelativeLayout>
