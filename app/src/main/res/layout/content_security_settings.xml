<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/zero"
    android:paddingLeft="@dimen/zero"
    android:paddingRight="@dimen/zero"
    android:paddingTop="@dimen/zero"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.imme.immeclient.SecuritySettingsActivity"
    tools:showIn="@layout/activity_security_settings">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Change PIN 1"
                android:textSize="20sp"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/account_balance_gift_bg"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout_change_pin2">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="110dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Change PIN 2"
                android:textSize="20sp"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/account_balance_gift_bg"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_below="@+id/linearLayout_change_pin2"
        android:paddingTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <Switch
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="  Track Your Transaction"
            android:layout_alignParentEnd="true"
            android:textSize="15dp"
            android:background="#d5f0e3"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch1"
        android:paddingTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:id="@+id/linearLayout3">

        <Switch
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="  Using Color Security"
            android:id="@+id/switch_btn"
            android:onClick=""
            android:layout_alignParentEnd="true"
            android:textSize="15dp"
            android:background="#d5f0e3"
            android:color="@drawable/account_balance_gift_bg"
            />

    </LinearLayout>

    <!--

    <TextView
        android:id="@+id/tv"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="On off the switch..."
        android:textColor="#191970"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentStart="true" />

    -->

</RelativeLayout>
