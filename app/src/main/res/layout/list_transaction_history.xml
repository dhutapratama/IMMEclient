<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="68dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:id="@+id/lth_img">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:src="@mipmap/transaction_history_button_send_icon"
            android:id="@+id/lth_image_trans_type"/>
        <TextView
            android:id="@+id/lth_text_trans_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[TRANS_TYPE]"
            android:textSize="8sp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/lth_img"
        android:layout_toLeftOf="@+id/lth_ly_amount"
        android:gravity="center_vertical"
        android:paddingLeft="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[DATE]"
            android:textSize="10dp"
            android:id="@+id/lth_date"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[NAME]"
            android:singleLine="true"
            android:textSize="12dp"
            android:id="@+id/lth_name"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingTop="25dp"
        android:layout_alignParentRight="true"
        android:id="@+id/lth_ly_amount">
        <TextView
            android:text="Rp."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/textView3" />

        <TextView
            android:text="[AMOUNT]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:width="110dp"
            android:singleLine="true"
            android:layout_gravity="right"
            android:gravity="right"
            android:id="@+id/lth_amount"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>