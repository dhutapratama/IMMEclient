<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff">

    <LinearLayout
        android:layout_width="fill_parent"
        android:background="@color/main_lastTransaction_bg"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true">
        <TextView android:text="@string/main_lastTransaction"
            android:id="@+id/main_textview_last_transaction"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/main_lastTransaction_padding"
            android:paddingBottom="@dimen/main_lastTransaction_padding"
            android:textColor="@color/textWhite"
            android:textSize="17sp"
            android:gravity="center" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="@color/main_lastTransaction_bg_1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:id="@+id/last_transaction_1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmlt1_image"
            android:src="@mipmap/main_last_transaction_send_pay_icon"
            android:paddingTop="@dimen/main_lastTransaction_padding"
            android:visibility="gone"/>
        <TextView
            android:text="[NAME]"
            android:id="@+id/cmlt1_name"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/main_lastTransaction_padding"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textWhite"
            android:textSize="15sp"
            android:singleLine="true"
            android:layout_toRightOf="@id/cmlt1_image"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:id="@+id/cmlt1_ll_amount"
            android:visibility="gone">
            <TextView
                android:text="Rp [AMOUNT]"
                android:id="@+id/cmlt1_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textColor="@color/textWhite"
                android:textSize="12sp"
                android:layout_gravity="right"/>
            <TextView
                android:text="[DATE]"
                android:id="@+id/cmlt1_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textColor="@color/textWhite"
                android:textSize="10sp"
                android:layout_gravity="right"/>
        </LinearLayout>

        <TextView android:text=""
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/main_lastTransaction_padding"
            android:paddingBottom="@dimen/main_lastTransaction_padding"
            android:textColor="@color/textWhite"
            android:gravity="center"
            android:id="@+id/cmlt1_no_trans"/>

        <ProgressBar
            android:id="@+id/LoadingAnimation2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="@color/main_lastTransaction_bg_2"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:id="@+id/last_transaction_2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmlt2_image"
            android:src="@mipmap/main_last_transaction_receive_icon"
            android:paddingTop="@dimen/main_lastTransaction_padding"
            android:visibility="gone"
            />
        <TextView
            android:text="[NAME]"
            android:id="@+id/cmlt2_name"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/main_lastTransaction_padding"
            android:textColor="@color/textWhite"
            android:textSize="15sp"
            android:width="160dp"
            android:singleLine="true"
            android:layout_toRightOf="@+id/cmlt2_image"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:id="@+id/cmlt2_ll_amount"
            android:visibility="gone">
            <TextView
                android:text="Rp [AMOUNT]"
                android:id="@+id/cmlt2_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="0dp"
                android:textColor="@color/textWhite"
                android:textSize="12sp"
                android:layout_gravity="right" />
            <TextView
                android:text="[DATE]"
                android:id="@+id/cmlt2_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textColor="@color/textWhite"
                android:textSize="10sp"
                android:layout_gravity="right" />
        </LinearLayout>
        <TextView android:text="No Transaction"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/main_lastTransaction_padding"
            android:paddingBottom="@dimen/main_lastTransaction_padding"
            android:textColor="@color/textWhite"
            android:gravity="center"
            android:id="@+id/cmlt2_no_trans"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="@color/main_lastTransaction_bg_3"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:id="@+id/last_transaction_3"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmlt3_image"
            android:src="@mipmap/main_last_transaction_topup_icon"
            android:paddingTop="@dimen/main_lastTransaction_padding"
            android:visibility="gone"/>
        <TextView
            android:text="Indomaret"
            android:id="@+id/cmlt3_name"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/main_lastTransaction_padding"
            android:textColor="@color/textWhite"
            android:textSize="15sp"
            android:width="160dp"
            android:singleLine="true"
            android:layout_toRightOf="@+id/cmlt3_image"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:id="@+id/cmlt3_ll_amount"
            android:visibility="gone">
            <TextView
                android:text="Rp [AMOUNT]"
                android:id="@+id/cmlt3_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textColor="@color/textWhite"
                android:textSize="12sp"
                android:layout_gravity="right" />
            <TextView
                android:text="[DATE]"
                android:id="@+id/cmlt3_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingBottom="5dp"
                android:textColor="@color/textWhite"
                android:textSize="10sp"
                android:layout_gravity="right"/>
        </LinearLayout>
        <TextView android:text="No Transaction"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/main_lastTransaction_padding"
            android:paddingBottom="@dimen/main_lastTransaction_padding"
            android:textColor="@color/textWhite"
            android:gravity="center"
            android:id="@+id/cmlt3_no_trans"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>