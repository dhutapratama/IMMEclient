<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/zero"
    android:paddingLeft="@dimen/zero"
    android:paddingRight="@dimen/zero"
    android:paddingTop="@dimen/zero"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.imme.immeclient.AccountVerifyPhoneNumberStep1Activity"
    tools:showIn="@layout/activity_account_verify_phone_number_step1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:id="@+id/one">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="First, Let's confirm your number"
            android:gravity="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:id="@+id/two"
        android:paddingTop="30dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp">
        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText
                android:textColor="@color/textBlack"
                android:id="@+id/sign_up_edittext_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Phone Number"
                android:textSize="20sp"/>
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/three"
        android:gravity="center"
        android:layout_below="@+id/two"
        android:paddingTop="50dp">

        <TextView
            android:id="@+id/button_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:textColor="@color/textWhite"
            android:gravity="center"
            android:textSize="15sp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="@drawable/account_save_verify_blue"/>

    </RelativeLayout>

</RelativeLayout>
