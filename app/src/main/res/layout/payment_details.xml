<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/bottomxxx">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:paddingTop="0dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:background="#ffffff"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_list" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:background="#e0e0e0"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:id="@+id/last_transaction_payment_9"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView android:text="Total :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/main_lastTransaction_padding"
                        android:paddingBottom="@dimen/main_lastTransaction_padding"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-thin"
                        android:width="100dp"
                        android:textAlignment="textEnd"
                        android:gravity="end" />


                    <TextView android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/main_lastTransaction_padding"
                        android:paddingBottom="@dimen/main_lastTransaction_padding"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-thin"
                        android:textAlignment="textEnd"
                        android:gravity="end"
                        android:layout_alignParentRight="true"
                        android:width="130dp"
                        android:id="@+id/pd_total_price"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>