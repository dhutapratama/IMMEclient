<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@null">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lay_rel_img"
        android:layout_gravity="center"
        android:padding="5dp"
        android:background="@drawable/white_circle_bg">

        <com.imme.immeclient.MLRoundedImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/profile_image"
            android:layout_marginTop="@dimen/user_image_margin_top"
            />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_gravity="center"
            android:text="[NAME]"
            android:elegantTextHeight="false"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/textWhite"
            android:id="@+id/full_name"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[VERIFIED_STATUS]"
                android:textSize="10dp"
                android:id="@+id/verified_status"
                android:textColor="@color/textWhite" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/verified_icon"
                android:src="@mipmap/main_nav_verified_icon"
                android:visibility="gone"
                android:paddingLeft="5dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>