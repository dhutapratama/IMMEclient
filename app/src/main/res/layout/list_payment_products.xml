<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="35dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView android:text="[PRODUCT_NAME]"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/main_lastTransaction_padding"
        android:paddingBottom="@dimen/main_lastTransaction_padding"
        android:textColor="#000000"
        android:textSize="13sp"
        android:fontFamily="sans-serif-thin"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/lpp_product_name"
        android:maxWidth="180dp"/>

    <TextView android:text="[QT]"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/main_lastTransaction_padding"
        android:paddingBottom="@dimen/main_lastTransaction_padding"
        android:textColor="#000000"
        android:textSize="15sp"
        android:fontFamily="sans-serif-thin"
        android:gravity="right"
        android:width="30dp"
        android:layout_toLeftOf="@+id/lpp_price"
        android:id="@+id/lpp_qty"/>


    <TextView android:text="Rp. [PRICE]"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/main_lastTransaction_padding"
        android:paddingBottom="@dimen/main_lastTransaction_padding"
        android:textColor="#000000"
        android:textSize="15sp"
        android:fontFamily="sans-serif-thin"
        android:layout_alignParentRight="true"
        android:width="100dp"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:gravity="end"
        android:id="@id/lpp_price" />

</RelativeLayout>