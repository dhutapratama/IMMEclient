<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/zero"
    android:paddingRight="@dimen/zero"
    android:paddingTop="@dimen/zero"
    android:paddingBottom="@dimen/zero"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_send_pay_details"
    tools:context="com.imme.immeclient.Send_pay_details">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#02affe">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Balance:"
            android:fontFamily="sans-serif-thin"
            android:id="@+id/textView"
            android:gravity="center"
            android:textColor="@color/textWhite"
            android:paddingTop="15dp"
            android:paddingBottom="0dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="0dp">

            <TextView
                android:text="Rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textWhite"
                android:textSize="20sp"
                android:paddingTop="@dimen/main_balance_rp_paddingTop"
                android:paddingRight="@dimen/main_balance_rp_paddingRight" />

            <TextView
                android:text="300.000"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textWhite"
                android:textSize="40sp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="You will pay:"
                android:gravity="center"
                android:textSize="15dp"
                android:padding="13dp"
                android:textColor="#898989"
                android:background="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#e0e0e0"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_payment_details_sevel_icon"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seven Eleven"
                android:gravity="center"
                android:textSize="18dp"/>

        </LinearLayout>

        <include layout="@layout/last_transaction_payment" android:layout_width="fill_parent" android:layout_height="wrap_content"></include>

    </LinearLayout>

</RelativeLayout>
