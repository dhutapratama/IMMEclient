<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/zero"
android:paddingRight="@dimen/zero"
android:paddingTop="@dimen/zero"
android:paddingBottom="@dimen/zero"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:showIn="@layout/activity_personal_send"
tools:context="com.imme.immeclient.SendPayPersonalDetail"
android:id="@+id/sppd_layout">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#02affe">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="My Balance:"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/textView"
        android:gravity="center"
        android:textColor="@color/textWhite"
        android:paddingTop="15dp"
        android:paddingBottom="0dp"
        android:textSize="20dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="0dp">

        <TextView
            android:text="Rp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textWhite"
            android:textSize="20sp"
            android:paddingTop="@dimen/main_balance_rp_paddingTop"
            android:paddingRight="@dimen/main_balance_rp_paddingRight" />

        <TextView
            android:text="[BALANCE]"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textWhite"
            android:id="@+id/send_main_balance"
            android:textSize="40sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:background="#0E99DA"
        android:clickable="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="success transfer money to :"
            android:id="@+id/send_anouncement"
            android:layout_below="@+id/personal_name"
            android:gravity="center"
            android:textColor="@color/textWhite"
            android:textSize="20dp"
            android:paddingBottom="30dp"/>

        <com.imme.immeclient.MLRoundedImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/sender_pic"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="[RECEIVER_NAME]"
            android:id="@+id/personal_name"
            android:textColor="@color/textWhite"
            android:gravity="center"
            android:textSize="25dp"
            android:paddingTop="20dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="[SEND_AMOUNT]"
            android:id="@+id/personal_balance"
            android:gravity="center"
            android:textColor="@color/textWhite"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>
</RelativeLayout>